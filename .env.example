# 基本配置
NODE_ENV=development
PORT=5001

# 資料庫配置
DATABASE_URL=sqlite:facematch.sqlite

# 預設使用者密碼 (請在生產環境中修改)
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
DEFAULT_SAFETY_PASSWORD=CHANGE_THIS_SAFETY_PASSWORD
DEFAULT_MANAGER_PASSWORD=CHANGE_THIS_MANAGER_PASSWORD
DEFAULT_USER_PASSWORD=CHANGE_THIS_USER_PASSWORD

# 密碼雜湊設定
BCRYPT_SALT_ROUNDS=12

# FaceMatch API 配置
FACEMATCH_HOST=YOUR_FACEMATCH_HOST
FACEMATCH_PORT=80
FACEMATCH_USERNAME=YOUR_FACEMATCH_USERNAME
FACEMATCH_PASSWORD=YOUR_FACEMATCH_PASSWORD
FACEMATCH_PROTOCOL=http
FACEMATCH_TIMEOUT=30000

# Session 配置
SESSION_SECRET=YOUR_VERY_LONG_RANDOM_SESSION_SECRET_KEY_HERE
SESSION_EXPIRE_HOURS=24

# 郵件配置 (選用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# 系統配置
DEFAULT_ADMIN_EMAIL=admin@company.local
SITE_NAME=FaceMatch 承攬商管理系統
SITE_VERSION=2.1.0

# 資料保留政策 (天數)
PERSON_DATA_RETENTION_DAYS=2555
TRIGGER_ACTION_RETENTION_DAYS=365
ACCESS_LOG_RETENTION_DAYS=90

# 同步配置
SYNC_INTERVAL_MINUTES=30
MAX_SYNC_RETRIES=3
SYNC_TIMEOUT_SECONDS=120

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# 開發配置
DEBUG=facematch:*
LOG_LEVEL=debug