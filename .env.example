# 基本配置
NODE_ENV=development
PORT=3000

# 資料庫配置
MONGODB_URI=mongodb://localhost:27017/facematch-cms

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# FaceMatch API 配置
FACEMATCH_HOST=10.6.116.200
FACEMATCH_PORT=80
FACEMATCH_USERNAME=Admin
FACEMATCH_PASSWORD=your-facematch-password
FACEMATCH_PROTOCOL=http
FACEMATCH_TIMEOUT=30000


# 檔案上傳配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# 郵件配置 (選用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 系統配置
DEFAULT_ADMIN_EMAIL=admin@facematch.local
DEFAULT_ADMIN_PASSWORD=admin123
SITE_NAME=FaceMatch 承攬商管理系統
SITE_VERSION=2.0.0

# 資料保留政策 (天數)
PERSON_DATA_RETENTION_DAYS=2555
TRIGGER_ACTION_RETENTION_DAYS=365
ACCESS_LOG_RETENTION_DAYS=90

# 同步配置
SYNC_INTERVAL_MINUTES=30
MAX_SYNC_RETRIES=3
SYNC_TIMEOUT_SECONDS=120

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# 開發配置
DEBUG=facematch:*
LOG_LEVEL=debug