{
  "name": "facematch-contractor-system",
  "version": "1.0.0",
  "description": "FaceMatch 承攬商管理系統",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "dev:frontend": "cd client && npm start",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc && mkdir -p dist/docs && cp src/docs/openapi.yml dist/docs/",
    "build:frontend": "cd client && npm run build",
    "start": "node dist/app.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "install:frontend": "cd client && npm install",
    "setup": "npm install && npm run install:frontend && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist && rm -rf logs/*.log"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "ldapts": "^8.0.8",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "facematch",
    "contractor",
    "management",
    "access-control"
  ],
  "author": "Claude Code",
  "license": "MIT",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seikaikyo/FaceMatch.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/seikaikyo/FaceMatch/issues"
  },
  "homepage": "https://github.com/seikaikyo/FaceMatch#readme"
}
